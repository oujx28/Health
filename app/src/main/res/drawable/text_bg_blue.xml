        <shape>
            <corners android:radius="8dp" />

            <padding android:bottom="4dp" android:left="16dp" android:right="16dp" android:top="4dp" />

            <solid android:color="#007BC0" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="8dp" />

            <padding android:bottom="4dp" android:left="16dp" android:right="16dp" android:top="4dp" />

            <solid android:color="@color/blue" />
