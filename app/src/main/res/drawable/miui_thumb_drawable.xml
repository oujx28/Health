<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="#BBDEFB" />
            <stroke android:width="1px" android:color="#90CAF9" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="#424242" />
            <stroke android:width="1px" android:color="#757575" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/blue" />
            <stroke android:width="1px" android:color="#2196F3" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <!--<solid android:color="#E0E0E0" />
            <stroke android:width="1px" android:color="#D0D0D0" />-->
            <solid android:color="#BBDEFB" />
            <stroke android:width="1px" android:color="#90CAF9" />
        </shape>
    </item>
</selector>